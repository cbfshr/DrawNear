<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF99CCFF"
    android:orientation="vertical"
    tools:context="com.coms309r04.drawnear.views.CreatePostActivity" >

    
    <com.coms309r04.drawnear.views.DrawingView
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal" >   
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginRight="30dp" >
            
            <ImageButton
                android:id="@+id/draw_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#FF99CCFF"
                android:contentDescription="@string/paint"
                android:padding="1dp"
                android:src="@drawable/ic_brush" />

            <ImageButton
                android:id="@+id/erase_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#FF99CCFF"
                android:contentDescription="@string/erase"
                android:src="@drawable/ic_eraser" />
            
            <ImageButton
                android:id="@+id/new_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#FF99CCFF"
                android:contentDescription="@string/paint"
                android:padding="1dp"
                android:src="@drawable/ic_delete_x" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paint_colors"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#FF99CCFF" >
            
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF990000"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#990000" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF66FF33"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#66FF33" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/paint_colors2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFF0000"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF0000" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF009900"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#009900" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/paint_colors3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFF4400"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF3300" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF0033CC"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#0033CC" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/paint_colors4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFF9900"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF9900" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF9933FF"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#9933FF" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/paint_colors5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF00"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FFFF00" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF000000"
                    android:contentDescription="@string/paint"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#000000" />

        </LinearLayout>
        
    </LinearLayout>

