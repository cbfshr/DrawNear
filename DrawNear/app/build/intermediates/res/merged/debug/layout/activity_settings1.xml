<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/Profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Profile" />

        <Button
            android:id="@+id/Account_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Profile"
            android:text="Account Settings" />

        <Button
            android:id="@+id/Location_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Account_setting"
            android:text="Location Services" />

        <Button
            android:id="@+id/Privacy_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Location_setting"
            android:text="Privacy" />

        <Button
            android:id="@+id/Advanced_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Privacy_setting"
            android:text="Advanced" />

        <Button
            android:id="@+id/About_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Advanced_setting"
            android:text="About" />

        <Button
            android:id="@+id/Help_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/About_app"
            android:text="Help" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Account_setting"
            android:text="ToggleButton" />

    </RelativeLayout>

</ScrollView><!-- From: file:/D:/Projects/DrawNear/DrawNear/app/src/main/res/layout/activity_settings1.xml -->