<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coms309r04.drawnear.views.MapActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/logged_in_as_map"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:background="#99CCFF"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Anonymous"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <include
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/activity_map_fragment" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp" />

    <RelativeLayout
        android:id="@+id/arrows"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true" >

        <ImageButton
            android:id="@+id/map_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:onClick="onArrowClick"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left" />

        <ImageButton
            android:id="@+id/map_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:onClick="onArrowClick"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/Projects/DrawNear/DrawNear/app/src/main/res/layout/activity_map.xml -->