<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>


	<style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/background_splash</item>
	</style>

	<style name="WelcomeTheme" parent="android:Theme.Holo.Light.NoActionBar">
	</style>

	<style name="DisplayPostTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<!--<item name="android:background">#000000</item>-->
		<item name="android:windowActionBarOverlay">true</item>

		<!-- Support library compatibility -->
		<item name="windowActionBarOverlay">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>


	<color name="white">#ffffff</color>
	<color name="gray">#eaeaea</color>
	<color name="black">#000000</color>
	<color name="black_transparent">#88000000</color>
</resources>
